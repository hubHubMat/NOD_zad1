import pandas as pd
import matplotlib.pyplot as plt


# 2. tworzenie ramki danych ze s lownika
data = {'Name': ['Anna', 'Bob', 'Charles'],
        'Age': [23, 35, 45],
        'City': ['Warsaw', 'Berlin', 'Paris']}
